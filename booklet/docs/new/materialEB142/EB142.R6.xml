         <paragraph eId="para_1">
            <content eId="para_1__content">
               <p>
                  <term refersTo="#recommends" eId="term_2">RECOMMENDS</term> to the Seventy-first <organization refersTo="#worldHealthAssembly" eId="organization_2">World Health Assembly</organization> the adoption of the following resolution: </p>
               <blockContainer>
                  <componentRef eId="para_1__component_1" src="#component_1" showAs="resolution"/>
               </blockContainer>
            </content>
         </paragraph>
      </mainBody>
      <conclusions>
         <p>(<event refersTo="#tenthMeeting" eId="event_1">Tenth meeting</event>, <docDate date="2018-01-26">26 January 2018</docDate>)</p>
