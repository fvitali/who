      <preface>
         <p>
            <docNumber>EB142.R5</docNumber>
            <docTitle>Draft <organization refersTo="#who" eId="organization_1">WHO</organization> global action plan on physical activity 2018−2030 <authorialNote marker="1" placement="bottom" eId="authorialNote_1">
                  <p>See Annex 1, and Annex 5 for the financial and administrative implications for the Secretariat of the adoption of this resolution.</p>
               </authorialNote>
            </docTitle>
         </p>
      </preface>
      <preamble>
         <formula name="enactingFormula">
            <p>The <organization refersTo="#wfpExecutiveBoard" eId="organization_2">Executive Board</organization>,</p>
         </formula>
         <container name="havingConsidered">
            <p>
               <term refersTo="#havingConsidered" eId="term_1">Having considered</term> the report on physical activity for health, <authorialNote marker="2" placement="bottom" eId="authorialNote_2">
                  <p>Document EB142 / 18 .</p>
               </authorialNote>
            </p>
         </container>
      </preamble>
